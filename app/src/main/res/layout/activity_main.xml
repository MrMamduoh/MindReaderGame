<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:padding="@dimen/NumbersPadding"
            android:text="@string/Start"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvHowToPlay"
            android:layout_width="384dp"
            android:layout_height="460dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="15dp"

            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:padding="@dimen/NumbersPadding"
            android:text="@string/How_to_play"
            android:textColor="@color/black"
            android:textSize="@dimen/NumberTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/How_to_play_example"
            app:layout_constraintBottom_toTopOf="@+id/btnStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHowToPlay"
            android:textSize="@dimen/NumberTextSize"
            android:padding="@dimen/NumbersPadding"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/How_to_play_head"
            app:layout_constraintBottom_toTopOf="@+id/tvHowToPlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/design_default_color_error"
            android:textSize="@dimen/headtextsize"/>


</androidx.constraintlayout.widget.ConstraintLayout>